    <h1>Here are your books</h1>
    {{#each books}}
    <div class="container">
        <div class="book">
            <a href="/details/{{_id}}"><img class="bookPoster" src="{{bookPoster}}" /></a>
            <a href="/delete/{{_id}}">Delete</a>
        </div>
        {{else}}
         <div class="book">
           <p>No books in the Library....</p>
        </div>
        {{/each}}
    </div>